<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="donnu.zolotarev.wallpaper.android"
          android:versionCode="1"
          android:versionName="1.0" >


    <!-- TODO: проверить название пакета здесь и в livewallpaper.xml! -->


    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="21" />

    <uses-feature
            android:glEsVersion="0x00020000"
            android:required="true" />

    <application
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:allowBackup="true" >

        <!-- Live Wallpaper Service -->
        <service android:name="donnu.zolotarev.wallpaper.android.AndroidLauncher"
                 android:label="@string/app_name"
                 android:enabled="true"
                 android:description="@string/app_description"
                 android:permission="android.permission.BIND_WALLPAPER">

            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data android:name="android.service.wallpaper"
                       android:resource="@xml/livewallpaper" />
        </service>

        <activity android:name="donnu.zolotarev.wallpaper.android.Prefs"
                  android:exported="true"
                  android:label="@string/settings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filer>
                <action android:name=".Preferences" />
                <category android:name="android.intent.category.PREFERENCE" />
            </intent-filer>
        </activity>


    </application>

</manifest>
