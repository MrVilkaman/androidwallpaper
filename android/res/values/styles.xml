<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!--   <item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="GdxTheme" parent="android:Theme">
		<item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Text.TitleText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/main_banner_title_size</item>

    </style>

    <style name="Text.SubTitleText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Text">
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="MainButtoms">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_btn_color</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/line_margin</item>
        <item name="android:layout_marginRight">@dimen/line_margin</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:background">@drawable/selector_setting_btn</item>
    </style>

    <style name="MainButtoms.Big">
        <item name="android:paddingBottom">@dimen/main_buttoms_big</item>
        <item name="android:paddingTop">@dimen/main_buttoms_big</item>
    </style>

    <style name="Text.Setting">
        <item name="android:layout_marginLeft">@dimen/line_margin</item>
        <item name="android:layout_marginRight">@dimen/line_margin</item>
        <item name="android:layout_marginTop">@dimen/line_margin</item>
        <item name="android:layout_marginBottom">@dimen/line_margin</item>
    </style>

    <style name="Text.Setting.Full">
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_marginLeft">@dimen/footer_icon_margin</item>
        <item name="android:layout_marginRight">@dimen/footer_icon_margin</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MainButtoms.LittleSetting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="Switch" >
        <item name="android:layout_gravity">right|center</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/line_margin</item>
    </style>

    <style name="Setting_FL">
        <item name="android:layout_marginLeft">@dimen/line_margin</item>
        <item name="android:layout_marginRight">@dimen/line_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
