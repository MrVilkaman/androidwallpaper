<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout android:layout_width="fill_parent"
        android:layout_below="@+id/adslayout"
        android:id="@+id/view_top_banner"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image"
            android:src="@drawable/image3"
            android:scaleType="centerCrop"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/main_banner_h_size" />

        <LinearLayout style="@style/LL.V"
            android:id="@+id/title_layout"
            android:paddingBottom="@dimen/main_banner_text_padding"
            android:layout_gravity="bottom">
            <TextView style="@style/Text.TitleText" android:text="@string/banner_title"/>
            <TextView style="@style/Text.SubTitleText" android:text="@string/banner_subtitle"/>
        </LinearLayout>

    </FrameLayout>
</merge>